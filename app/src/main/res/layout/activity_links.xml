<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackground"
    android:orientation="vertical"
    tools:context=".Links.LinksActivity">

    <include layout="@layout/my_toolbar" />

    <LinearLayout
        android:id="@+id/l_sec1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            style="@style/card_style"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/ice_ass_rl"
                style="@style/rl_style">

                <ImageView
                    android:id="@+id/ice_ass"
                    style="@style/card_imageview"
                    android:src="@drawable/ic_mood" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/card_textview"
                    android:layout_below="@+id/ice_ass"
                    android:text="ICE Association" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/card_style"
            app:cardElevation="5dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:id="@+id/ice_pc_rl"
                style="@style/rl_style"
                >

                <ImageView
                    android:id="@+id/ice_pc"
                    style="@style/card_imageview"
                    android:src="@drawable/ic_mood" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/card_textview"
                    android:layout_below="@id/ice_pc"
                    android:textAlignment="center"
                    android:text="ICE Programming Club" />
            </RelativeLayout>




        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_sec2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            style="@style/card_style"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/ice_ru_rl"
                style="@style/rl_style">

                <ImageView
                    android:id="@+id/ice_ru_web"
                    style="@style/card_imageview"
                    android:src="@drawable/web" />

                <TextView
                    android:id="@+id/ice_ru_web_tv"
                    style="@style/card_textview"
                    android:layout_below="@+id/ice_ru_web"
                    android:text="RU Web" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/card_style"
            android:layout_weight="1"
            app:cardElevation="5dp">

            <RelativeLayout
                android:id="@+id/ice_ice_rl"
                style="@style/rl_style">

                <ImageView
                    android:id="@+id/ice_ice"
                    style="@style/card_imageview"
                    android:src="@drawable/web" />

                <TextView
                    android:id="@+id/ice_ice_tv"
                    style="@style/card_textview"
                    android:layout_below="@id/ice_ice"
                    android:text="ICE"
                    android:textAlignment="center" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>